CREATE DATABASE HOUSING_WEBSITE;

USE HOUSING_WEBSITE

CREATE TABLE USER (
userID INT PRIMARY KEY NOT NULL,
forename VARCHAR(20) NOT NULL,
surname VARCHAR(30) NOT NULL,
username VARCHAR(30) NOT NULL,
password VARCHAR(30) NOT NULL,
email VARCHAR(50) NOT NULL,
phonoNo INT NOT NULL );

CREATE TABLE LANDLORD (
landlordID INT PRIMARY KEY NOT NULL,
userID INT NOT NULL,
companyName VARCHAR(50),
FOREIGN KEY (userID) REFERENCES USER(userID) );

CREATE TABLE PROPERTIES (
propertyID INT PRIMARY KEY NOT NULL,
landlordID INT NOT NULL,
propertyTitle VARCHAR(100) NOT NULL,
propertyDescription VARCHAR(500) NOT NULL,
propertyType VARCHAR(20) NOT NULL,
address1 VARCHAR(50) NOT NULL,
address2 VARCHAR(50),
city VARCHAR(30) NOT NULL,
postcode VARCHAR(8) NOT NULL,
noOfBedrooms int NOT NULL,
price DECIMAL(11,2) NOT NULL,
dateListed DATE,
image VARCHAR(100),
FOREIGN KEY (landlordID) REFERENCES LANDLORD(landlordID) );

CREATE TABLE ROOMS (
propertyID INT NOT NULL,
roomName VARCHAR(20),
image VARCHAR(100),
FOREIGN KEY (propertyID) REFERENCES PROPERTIES(propertyID) );

CREATE TABLE APPOINTMENT (
appointmentID INT PRIMARY KEY NOT NULL,
title VARCHAR(30),
description VARCHAR(200),
dateAndTime DATETIME, 
landlordID INT NOT NULL,
userID INT NOT NULL,
FOREIGN KEY (landlordID) REFERENCES LANDLORD(landlordID),
FOREIGN KEY (userID) REFERENCES USER(userID) );






